<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="接收对象的username"
        />
    <EditText
        android:id="@+id/et_appkey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="对象所在appkey"/>

    <EditText
        android:inputType="number"
        android:id="@+id/et_gid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="接收的群组id"
        />

    <EditText
        android:id="@+id/et_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="自定义文件名"
        />

    <Button
        android:id="@+id/bt_get_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取内置file"
        />

    <Button
        android:id="@+id/bt_send_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送"
        />
    <TextView
        android:id="@+id/tv_show_voice_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_progress"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>