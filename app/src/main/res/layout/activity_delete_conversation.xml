<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="消息对象username"
        />
    <EditText
        android:inputType="number"
        android:id="@+id/et_group_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="消息对象群组id"
        />

    <Button
        android:id="@+id/bt_delete_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除会话中消息"
        />
    <Button
        android:id="@+id/bt_single_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除单聊会话"
        />
    <Button
        android:id="@+id/bt_group_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除群聊会话"
        />
    <Button
        android:id="@+id/bt_get_conversation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询会话"/>
    <Button
        android:id="@+id/bt_get_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询消息"
        />
    <Button
        android:id="@+id/bt_get_latest_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取会话最新一条消息"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </ScrollView>
</LinearLayout>
