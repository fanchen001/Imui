<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableRow>

        <TextView
            android:layout_weight="1"
            android:text="本地单聊会话" />

        <TextView
            android:layout_weight="2"
            android:text="本地群聊会话" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/et_forward_local_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="用户username" />

        <EditText
            android:id="@+id/et_forward_local_gid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="群组gid"
            android:inputType="number" />
    </TableRow>

    <TableRow>

        <EditText
            android:id="@+id/et_forward_local_appkey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="用户所属appkey\n不填则为本应用" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:visibility="invisible" />
    </TableRow>


    <EditText
        android:id="@+id/et_forward_message_local_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="被转发消息的local message id"
        android:inputType="number"
        android:singleLine="false" />

    <TableRow>

    <TextView
        android:layout_weight="1"
        android:text="目标单聊会话" />

    <TextView
        android:layout_weight="2"
        android:text="目标群聊会话" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/et_forward_target_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="用户username" />

        <EditText
            android:id="@+id/et_forward_target_gid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="群组gid"
            android:inputType="number" />
    </TableRow>

    <TableRow>

        <EditText
            android:id="@+id/et_forward_target_appkey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="用户所属appkey\n不填则为本应用" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:visibility="invisible" />
    </TableRow>


    <Button
        android:id="@+id/bt_forward_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="转发" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_show_message_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>


</TableLayout>