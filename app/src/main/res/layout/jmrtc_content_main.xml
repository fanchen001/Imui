<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/et_invited_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="邀请用户的用户名" />

    <ScrollView
        android:id="@+id/sv_log"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tv_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/surface_container"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:orientation="horizontal"
        >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <CheckBox
            android:id="@+id/btn_enable_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="开关视频"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/btn_enable_audio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="开关音频"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/btn_enable_speakerphone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:scaleType="centerInside"
            android:text="开关免提"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_switch_camara"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="切换摄像头"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_session_print"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="通话信息打印"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>
