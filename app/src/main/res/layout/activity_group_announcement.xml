<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_gid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="群id"/>

            <EditText
                android:id="@+id/et_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="公告内容"/>

            <EditText
                android:id="@+id/et_send_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="true(发送消息)"/>

            <Button
                android:id="@+id/bt_publish_group_announcement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发布群公告" />

            <EditText
                android:id="@+id/et_announce_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="公告id"/>

            <Button
                android:id="@+id/bt_del_group_announcement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="删除群公告" />

            <Button
                android:id="@+id/bt_set_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="置顶" />

            <Button
                android:id="@+id/bt_cancel_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="取消置顶" />

            <Button
                android:id="@+id/bt_get_announcements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="获取群公告列表" />

            <TextView
                android:id="@+id/tv_show_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>