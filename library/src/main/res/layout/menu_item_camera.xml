<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aurora_ll_menuitem_camera_container"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:tag="camera">

    <FrameLayout
        android:id="@+id/aurora_framelayout_menuitem_camera"
        android:layout_width="45dp"
        android:layout_height="45dp">

        <ImageButton
            android:id="@+id/aurora_menuitem_ib_camera"
            style="@style/ChatInputIcon"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:src="@drawable/aurora_menuitem_camera" />
    </FrameLayout>
</LinearLayout>
