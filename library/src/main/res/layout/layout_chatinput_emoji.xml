<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.fanchen.chat.emoji.widget.EmoticonsFuncView
        android:id="@+id/view_epv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_eiv"
        android:orientation="vertical" />

    <com.fanchen.chat.emoji.widget.EmoticonsIndicatorView
        android:id="@+id/view_eiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_spit"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/indicator_margin" />

    <View
        android:id="@+id/view_spit"
        android:layout_width="match_parent"
        android:background="@color/aurora_spilt_line"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/bar_height"
        android:layout_height="@dimen/aurora_horizontalspit_view_height"/>

</RelativeLayout>